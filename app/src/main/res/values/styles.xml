<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="myTheme.ActionBar.Text" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/red</item>
    </style>

    <style name="title_main">
        <item name="android:paddingTop">280dp</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="text_main">
        <item name="android:paddingTop">14dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:paddingLeft">14dp</item>
        <item name="android:paddingRight">14dp</item>
        <item name="android:paddingBottom">14dp</item>
    </style>

    <style name="instructions_main">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="button">
        <item name="android:layout_marginBottom">20dp</item>
        <item name="android:background">@color/red</item>
        <item name="android:padding">8dp</item>
    </style>

    // styles for layout elements from Questions.xml

    <style name="image_questions">
        <item name= "android:layout_width">match_parent</item>
        <item name="android:layout_height">112dp</item>
        <item name="android:scaleType">fitStart</item>
    </style>

    <style name="questions">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">20sp</item>
        <item name="android:padding">10dp</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="radio_button_horizontal">
        <item name="android:textSize">20sp</item>
        <item name="android:paddingLeft">5dp</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_marginBottom">15dp</item>
    </style>

    <style name="edit_text">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">16sp</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_marginRight">100dp</item>
        <item name="android:layout_marginBottom">10dp</item>
    </style>

    <style name="check_box_image">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">10dp</item>
    </style>

    <style name="check_box_image_below">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_marginTop">20dp</item>
    </style>

    <style name="image_of_check_box_below">
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:layout_marginBottom">20dp</item>
    </style>

    <style name="check_box_text">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:textSize">20sp</item>
        <item name="android:paddingLeft">5dp</item>
    </style>

    <style name="quiz_prize_text">
        <item name="android:textSize">16sp</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginTop">30dp</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textStyle">bold</item>
        <item name="android:visibility">gone</item>
    </style>

    <style name="quiz_prize_image_view">
        <item name="android:visibility">gone</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="submit_answers_button">
        <item name="android:layout_marginTop">30dp</item>
        <item name="android:layout_marginBottom">20dp</item>
        <item name="android:padding">16dp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:background">@color/red</item>
    </style>

    <style name="screen_reset">
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:layout_marginBottom">5dp</item>
        <item name="android:padding">16dp</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="quiz_reset">
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:layout_marginBottom">20dp</item>
        <item name="android:padding">16dp</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="view_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:layout_marginLeft">16dp</item>
        <item name="android:layout_marginRight">16dp</item>
        <item name="android:background">@color/colorDivider</item>
    </style>

</resources>
